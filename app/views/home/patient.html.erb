<div id="content" class="col-sm-12">
<!--biometrics -->
<% biometrics = @patient[:biometrics] %>
<br>
<!--risks-->
<% risks = @patient[:risks] %>
<br>
<!--user -->
<% user = @patient[:user] %>
<br>
  <div class="row">
    <div class="col-md-3 col-sm-6 col-xs-6 we-image">
      <div class="pull-right">
        <%= image_tag '/assets/patient.png', style: 'width: 200px;' %>
      </div>
    </div>

    <div class="col-md-2 col-sm-6 col-xs-6 we-profile">
      <p style="text-transform:uppercase;">
        <%= "#{user['Owner_First_Name']} #{user['Owner_Last_Name']}" %>
        <!--NELSUN CHU-->
      </p>
      <p>
        <i class="fa fa-comment"></i>
        <i class="fa fa-calendar"></i>
      </p>
      <p>
        <%= user['Owner_Home_Address'] %>
        <!--123 Bushwick Ave-->
        <br>
        <%= user['Owner_City'] %>
        <!--Brooklyn, NY 11211-->
      </p>
      <p>
        <%= "#{user['Owner_State']}, #{user['Owner_Zip']}" %>
      </p>
      <p>
        <%= user['Owner_Home_Phone'] %>
        <!--(908)123-9876-->
      </p>
      <p>
        <%= user['Owner_Work_Phone'] %>
      </p>
    </div>


    <div class="col-md-3 col-sm-12 col-xs-12" style="min-width: 209px">

      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 we-box">
          <div class="box">
            <div class="we-title">
              height + weight
            </div>
            <div class="we-content">
              <div class="row ht-wt">
                <div class="col-md-6 col-sm-6 col-xs-6">
                  <span>
                    <%= biometrics['hght']['value'] %>
                  </span>
                  <!--<span>5</span>-->
                  <!--th-->
                  <!--<span>10</span>-->
                  <!--in-->
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                  <span>
                    <!--138.2-->
                    <%= biometrics['wght']['value'] %>
                  </span>
                   pound
                </div>
              </div>
            </div>
          </div>
        </div>
      <!--</div>-->
      <!--<div class="row">-->
        <div class="col-md-12 col-sm-12 col-xs-12 we-box">
          <div class="box smoke-status">
            <div class="we-title">
              Smoking Status
            </div>
            <div class="we-content">
              <span>
                Non-smoker
              </span>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-3 col-sm-12 col-xs-12" style="min-width: 209px">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 we-box">
          <div class="box depression">
            <div class="we-title">
              depression
            </div>
            <div class="we-content">
              <span>
                <!--Inactive-->
                <%= risks['Depression'].to_i == 0 ? 'Inactive' : 'Active' %>
              </span>
            </div>
          </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12 we-box">
          <div class="box medication">
            <div class="we-title">
              medication
            </div>
            <div class="we-content">
              <div>
                Lipitor, Lasix
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div style="text-align: center; margin: 10px 0;">
      <img alt="Dropshadow" src="/assets/dropshadow.png" style="width: 80%; height: 7px;">
    </div>
  </div>

  <div class="row" style="color: #868686">
    <div class="col-md-2 col-sm-12 col-xs-12 we-target">
      TARGETs
      <i class="fa fa-pencil"></i>
    </div>
    <div class="col-md-1 col-sm-6 col-xs-12 we-target">
      <span>
        10,000
      </span>
      Steps/day
    </div>

    <div class="col-md-2 col-sm-6 col-xs-12 we-target">
      <span>
        5
      </span>
      Miles/day
    </div>

    <div class="col-md-2 col-sm-6 col-xs-12 we-target">
      <span>
        60
      </span>
      Active minutes/day
    </div>
    <div class="col-md-2 col-sm-6 col-xs-12 we-target">
      <span>
        2,500
      </span>
      Calories/day
    </div>
    <div class="col-md-2 col-sm-6 col-xs-12 we-target">
      <span>
        115/80
      </span>
      mg/dl
    </div>

    <div class="col-md-1 col-sm-6 col-xs-12 we-target">
      <span>
        135
      </span>
      Pounds
    </div>
  </div>

  <div class="row">
    <div style="text-align: center; margin: 10px 0">
      <img alt="Dropshadow" src="/assets/dropshadow.png" style="width: 80%; height: 7px;">
    </div>
  </div>


  <div class="row">

    <div class="col-md-4 col-sm-6 we-box">
      <div class="box">
        <div class="we-title">
          fitness
        </div>
        <div class="we-content">
          <div class="we-row">
            steps
            <span class="pull-right">
              1,423
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%"></div>
            </div>
          </div>

          <div class="we-row">
            distance
            <span class="pull-right">
              492
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
            </div>
          </div>

          <div class="we-row">
            active minutes
            <span class="pull-right">
              148
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
            </div>
          </div>

          <div class="we-row">
            calories
            <span class="pull-right">
              201
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div>
            </div>
          </div>
          <div style="text-align: center">
            <span class="pull-left">
              <i class="fa fa-chevron-left"></i>
              yesterday
            </span>

            today

            <span class="pull-right">
              right
            <i class="fa fa-chevron-right"></i>
            </span>

          </div>
        </div>
      </div>
    </div> 

    <div class="col-md-4 col-sm-6 we-box">
      <div class="box span4" ontablet="span6" ondesktop="span4">
        <div class="we-title">
          diet
        </div>
        <div class="we-content">
          <div class="we-row">
            vegetables
            <span class="pull-right">
              4 servings
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%"></div>
            </div>
          </div>

          <div class="we-row">
            fruit
            <span class="pull-right">
              <%= risks['FruitRisk'] %>
              pieces
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
            </div>
          </div>

          <div class="we-row">
            dairy
            <span class="pull-right">
              <%= risks['DairyRisk'] %>
              cups
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%"></div>
            </div>
          </div>

          <div class="we-row">
            red meat
            <span class="pull-right">
              <%= risks['MeatRisk'] %>
              pieces
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="98" aria-valuemin="0" aria-valuemax="100" style="width: 98%"></div>
            </div>
          </div>
          <div style="text-align: center">
            <span class="pull-left">
              <i class="fa fa-chevron-left"></i>
              yesterday
            </span>

            today

            <span class="pull-right">
              right
            <i class="fa fa-chevron-right"></i>
            </span>

          </div>
        </div>
      </div>
    </div> 

    <div class="col-md-4 col-sm-6 we-box">
      <div class="box">
        <div class="we-title">
          weight + bmi
        </div>
        <div class="we-content">
          <div class="box">
            <ul class="nav nav-tabs">
              <li class="active">
                <a href="#home" data-toggle="tab" style="font-size: 12px; color: #CCCCCC; text-align: center">
                  <span style="font-size: 28px; color: #a9d248;">
                    138.2
                    <i class="fa fa-chevron-down"></i>
                  </span>
                  <br>
                  pounds &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
              </li>
              <li>
                <a href="#other" data-toggle="tab" style="font-size: 12px; color: #CCCCCC; text-align: center">
                  <span style="font-size: 28px; color: #73c3c3;">
                    14.3%
                    <i class="fa fa-chevron-up"></i>
                  </span>
                  <br>
                  body fat &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
              </li>
            </ul>
            <div class="tab-content">
              <div id="home" class="tab-pane active">
                <div class="box">
                  <!--<div class="box-content">-->
                    <div id="weight-chart"  class="center" style="height:250px;" ></div>
                    <!--<p id="hoverdata">Mouse position at (<span id="x">0</span>, <span id="y">0</span>). <span id="clickdata"></span></p>-->
                  <!--</div>-->
                </div>
              </div>
              <div id="other" class="tab-pane">
                <p>Other</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 

  </div>


  <div class="row">

    <div class="col-md-4 col-sm-6 we-box">
      <div class="box">
        <div class="we-title">
          cholestral
        </div>
        <div class="we-content">
          <div class="we-row">
            steps
            <span class="pull-right">
              1,423
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%"></div>
            </div>
          </div>

          <div class="we-row">
            distance
            <span class="pull-right">
              492
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
            </div>
          </div>

          <div class="we-row">
            active minutes
            <span class="pull-right">
              148
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%"></div>
            </div>
          </div>

          <div class="we-row">
            calories
            <span class="pull-right">
              201
            <i class="fa fa-chevron-right"></i>
            </span>
            <div class="progress">
              <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div>
            </div>
          </div>
          <div style="text-align: center">
            <span class="pull-left">
              <i class="fa fa-chevron-left"></i>
              yesterday
            </span>

            today

            <span class="pull-right">
              right
            <i class="fa fa-chevron-right"></i>
            </span>

          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-sm-6">
      <div class="box span4" ontablet="span6" ondesktop="span4">
        <div class="box-header">
          blood sugar
        </div>
        <div class="box-content">

        </div>
      </div>
    </div>

    <div class="col-md-4 col-sm-6">
      <div class="box">
        <div class="box-header">
          blood pressure
        </div>
        <div class="box-content">

        </div>
      </div>
    </div> 

  </div>

</div>