<div class="col-md-3 col-sm-6 col-xs-6 we-image">
  <div class="" style="text-align: center">
    <%= image_tag '/assets/patient.png', style: 'width: 200px;' %>
  </div>
</div>

<div class="col-md-2 col-sm-6 col-xs-6 we-profile">
  <p style="text-transform:uppercase;">
    <%= "#{user['owner_first_name']} #{user['owner_last_name']}" %>
    <!--NELSUN CHU-->
  </p>
  <p>
    <i class="fa fa-comment"></i>
    <i class="fa fa-calendar"></i>
  </p>
  <p>
    <%= user['owner_home_address'] %>
    <!--123 Bushwick Ave-->
    <br>
    <%= user['owner_city'] %>
    <!--Brooklyn, NY 11211-->
  </p>
  <p>
    <%= "#{user['owner_state']}, #{user['owner_zip']}" %>
  </p>
  <p>
    <%= user['owner_home_phone'] %>
    <!--(908)123-9876-->
  </p>
  <p>
    <%= user['owner_work_phone'] %>
  </p>
</div>

<div class="col-md-3 col-sm-12 col-xs-12 height_weight" style="min-width: 209px;">

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 we-box">
      <div class="box">
        <div class="we-title">
          height + weight
        </div>
        <div class="we-content">
          <div class="row ht-wt">
            <div class="col-md-6 col-sm-6 col-xs-6">
              <!--<span>-->
                <%#= biometrics['hght']['value'] %>
              <!--</span>-->
              <span>5</span>
              ft
              <span>10</span>
              in
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
              <span>
                <!--138.2-->
                <%= biometrics['wght']['value'] %>
              </span>
              pound
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if risks['smoking'] %>
      <% smoke = risks['smoking'].to_i %>
      <% if smoke == 0 || smoke == 1 %>
      <% smoking_status = 'Non Smoker / Never Smoked'  %>
      <% smoking_class = 'well-green' %>
      <% elsif smoke == 2 %>
        <% smoking_status = 'Past-Smoker / Recently Quit'  %>
        <% smoking_class = 'well-yellow' %>
      <% elsif smoke == 3 %>
        <% smoking_status = 'Current Smoker'  %>
        <% smoking_class = 'well-red' %>
      <% else %>
        <% smoking_class = '' %>
        <% smoking_status = 'NA' %>
      <% end %>
    <% else %>
      <% smoking_class = '' %>
      <% smoking_status = 'NA' %>
    <% end %>

    <div class="col-md-12 col-sm-12 col-xs-12 we-box">
      <div class="box smoke-status">
        <div class="we-title">
          Smoking Status
        </div>
        <div class="we-content">
          <span class="<%= smoking_class %>">
            <%= smoking_status %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<% if risks['depression'] %>
   <% depress = risks['depression'].to_i  %>
  <% if depress == 0 %>
    <% depression_status = 'Inactive' %>
    <% depression_class = 'well-green' %>
  <% elsif depress == 1 %>
    <% depression_status = 'Active' %>
    <% depression_class = 'well-yellow' %>
  <% else %>
    <% depression_status = 'NA' %>
    <% depression_class = '' %>
  <% end %>
<% else %>
  <% depression_status = 'NA' %>
  <% depression_class = '' %>
<% end %>
<div class="col-md-3 col-sm-12 col-xs-12 depression_medication" style="min-width: 209px;">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 we-box">
      <div class="box depression">
        <div class="we-title">
          depression
        </div>
        <div class="we-content">
          <span class="<%= depression_class %>">
            <%= depression_status %>
          </span>
        </div>
      </div>
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12 we-box">
      <div id="medication_partial">
        <%= render partial: '/home/patient/medication', locals: {medications: []} %>
      </div>
    </div>
  </div>
</div>